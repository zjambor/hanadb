<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="720.0" prefWidth="1424.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="SQL">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleTopSQL" text="Top SQL" />
                  <MenuItem mnemonicParsing="false" onAction="#handleLongRuntimeSQL" text="Long Runtime SQL" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Storage">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#newTablespacesWindow" text="Tablespaces" />
                  <MenuItem mnemonicParsing="false" onAction="#newDatafilesWindow" text="Data files" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="DBA">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#newSessionsWindow" text="Sessions" />
                  <MenuItem mnemonicParsing="false" onAction="#newUsersWindow" text="Users" />
                  <MenuItem mnemonicParsing="false" onAction="#newAuditedEventsWindow" text="Audit" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
